<?xml version="1.0" encoding="UTF-8"?>
<PermissionSet xmlns="http://soap.sforce.com/2006/04/metadata">
  <hasActivationRequired>false</hasActivationRequired>
  <label>Coveo ETL Admin</label>

  <!-- Apex Class Access -->
  <classAccesses>
    <apexClass>CoveoStreamClient</apexClass>
    <enabled>true</enabled>
  </classAccesses>
  <classAccesses>
    <apexClass>ICatalogJsonBuilder</apexClass>
    <enabled>true</enabled>
  </classAccesses>
  <classAccesses>
    <apexClass>CatalogJsonBuilderDefault</apexClass>
    <enabled>true</enabled>
  </classAccesses>
  <classAccesses>
    <apexClass>CatalogJsonBuilderCommerce</apexClass>
    <enabled>true</enabled>
  </classAccesses>
  <classAccesses>
    <apexClass>CatalogJsonBuilderFactory</apexClass>
    <enabled>true</enabled>
  </classAccesses>
  <classAccesses>
    <apexClass>ProductCatalogExportBatch</apexClass>
    <enabled>true</enabled>
  </classAccesses>
  <classAccesses>
    <apexClass>NightlyCatalogExport</apexClass>
    <enabled>true</enabled>
  </classAccesses>

  <!-- Object Access -->
  <objectPermissions>
    <object>Product2</object>
    <allowCreate>false</allowCreate>
    <allowDelete>false</allowDelete>
    <allowEdit>false</allowEdit>
    <allowRead>true</allowRead>
    <modifyAllRecords>false</modifyAllRecords>
    <viewAllRecords>true</viewAllRecords>
  </objectPermissions>
  <objectPermissions>
    <object>Pricebook2</object>
    <allowCreate>false</allowCreate>
    <allowDelete>false</allowDelete>
    <allowEdit>false</allowEdit>
    <allowRead>true</allowRead>
  </objectPermissions>
  <objectPermissions>
    <object>PricebookEntry</object>
    <allowCreate>false</allowCreate>
    <allowDelete>false</allowDelete>
    <allowEdit>false</allowEdit>
    <allowRead>true</allowRead>
  </objectPermissions>
  <objectPermissions>
    <object>Category__c</object>
    <allowCreate>true</allowCreate>
    <allowDelete>true</allowDelete>
    <allowEdit>true</allowEdit>
    <allowRead>true</allowRead>
  </objectPermissions>
  <objectPermissions>
    <object>ProductCategory__c</object>
    <allowCreate>true</allowCreate>
    <allowDelete>true</allowDelete>
    <allowEdit>true</allowEdit>
    <allowRead>true</allowRead>
  </objectPermissions>
  <objectPermissions>
    <object>CatalogJsonBuilderMapping__mdt</object>
    <allowRead>true</allowRead>
    <allowEdit>true</allowEdit>
    <allowCreate>true</allowCreate>
    <allowDelete>true</allowDelete>
  </objectPermissions>

  <!-- Named Credential Access -->
  <namedCredentialAccesses>
    <enabled>true</enabled>
    <name>Coveo_Push</name>
  </namedCredentialAccesses>

  <!-- System Permissions -->
  <systemPermissions>
    <enabled>true</enabled>
    <name>ApiEnabled</name>
  </systemPermissions>
  <systemPermissions>
    <enabled>true</enabled>
    <name>RunReports</name>
  </systemPermissions>
  <systemPermissions>
    <enabled>true</enabled>
    <name>AuthorApex</name>
  </systemPermissions>
</PermissionSet>